{% extends 'base.html.twig' %}

{% block body %}
    <h1>Texte list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for texte in textes %}
            <tr>
                <td><a href="{{ path('admin_textes_show', { 'id': texte.id }) }}">{{ texte.id }}</a></td>
                <td>{% if texte.date %}{{ texte.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ texte.titre }}</td>
                <td>{{ texte.description }}</td>
                <td>{{ texte.image }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_textes_show', { 'id': texte.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_textes_edit', { 'id': texte.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_textes_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
